<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ActivityHoraire"
    >


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"

        >
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/FullScreenTheme.AppBarOverlay">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/horaires_ramadan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horaires Ramadan"

                />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/horaires_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horaires Normal" />
        </com.google.android.material.tabs.TabLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>